@page
@model ArkansasAssetBuilders.Pages.Demographics.IndexModel

@{
    ViewData["Title"] = "Client Demographics";
}

<h1>Client Demographics</h1>

<p>
    <a asp-page="ADD">Add New Client Demographics</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Demographic[0].TaxYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demographic[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demographic[0].Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demographic[0].County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demographic[0].State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Demographic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaxYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
