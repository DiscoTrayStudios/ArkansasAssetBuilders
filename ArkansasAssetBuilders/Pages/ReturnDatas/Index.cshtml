@page
@model ArkansasAssetBuilders.Pages.ReturnDatas.IndexModel

@{
    ViewData["Title"] = "Clients Return Data";
}

<h1>Clients Return Data</h1>

<form method="post" asp-page-handler="ExportExcel" id="export">
    <button class="btn btn-sm btn-secondary order-button">Export To Excel</button>
</form>

<p>
    <a asp-page="Create">Create New Client Return Data</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by Tax Year:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TaxYearIDSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].TaxYearID)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.FederalReturnSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].FederalReturn)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TotalRefundSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].TotalRefund)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EITCSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].EITC)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CTCSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].CTC)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DependentsSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].Dependents)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SurveyScoreSort">
                    @Html.DisplayNameFor(model => model.ReturnDatas[0].SurveyScore)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ReturnDatas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaxYearID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FederalReturn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRefund)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EITC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dependents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyScore)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
